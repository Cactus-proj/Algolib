with(Mgfun):

for spec_func in [Fresnelf,Fresnelg] do
    printf("# %s\n",spec_func);
    sys:=dfinite_expr_to_sys(spec_func(x),f(x::diff));
    res:=eval(subs(f=spec_func,sys));
    res:=subs([
	Fresnelf(x)=
	    (1/2-FresnelS(x))*cos(Pi/2*x^2)-(1/2-FresnelC(x))*sin(Pi/2*x^2),
	Fresnelg(x)=
	    (1/2-FresnelC(x))*cos(Pi/2*x^2)-(1/2-FresnelS(x))*sin(Pi/2*x^2)
	],res):
    res:=simplify(res);
    if res={0} then
	print(okay);
	next
    fi;
    print(res,sys)
