with(Mgfun):

dfinite_expr_to_sys( 1/x^n, f(n::shift) ) :
if % = {-f(n)+x*f(n + 1)} then okay else "shift 1/x^n", % end if ;

dfinite_expr_to_sys( 1/x^n, f(x::diff, n::shift) ) :
if % = {n*f(x,n)+x*diff(f(x,n),x), -f(x,n)+x*f(x,n+1)} then okay
else "diff+shift 1/x^n", % end if ;

dfinite_expr_to_sys( exp(x^2)/x^n*ChebyshevT(n,x), f(x::diff, n::shift) ) :
if % = {
  (-2*n*x^2+2*x^4-2*x^2+n)*f(x,n)+n*x^2*f(x,n+1)+(-x^3+x)*diff(f(x,n),x),
  (4*x^6-8*x^4-4*n*x^4+4*n*x^2-n^2+2*x^2+n)*f(x,n)+(-4*x^5+5*x^3+2*n*x^3-2*n*x)*diff(f(x,n),x)+(x^4-x^2)*diff(diff(f(x,n),x),x)
} then okay else "diff+shift product with ChebyshevT", % end if ;
