with(Mgfun):

for spec_func in [WhittakerM,WhittakerW] do
    printf("# %s\n",spec_func);
    sys:=dfinite_expr_to_sys(spec_func(m,n,x),f(m::shift,n::shift,x::diff));
    # Make 10 attempts to obtain 0 SYMBOLICALLY for randomized
    # values of the parameters.
    for attempt to 10 do
	rand(10)()+1: rand(10)()+1;
	eval(subs([m=1/%%,n=1/%],f=spec_func,sys));
	eval(subs(`&where`=proc(a,b) subs(b,a) end,convert(%,'diff')));
	traperror(simplify(map(series,%,x,20)));
	if %<>lasterror then
	    break
	fi
    od;
    if map(convert,%,polynom)={0} then print(okay) else % fi
od:
