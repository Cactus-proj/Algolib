with(Mgfun):
infolevel[fglm]:=3:

for spec_func in
    [KelvinBer,KelvinBei,KelvinHer,KelvinHei,KelvinKer,KelvinKei]
do
    printf("# %s\n",spec_func);
    sys:=dfinite_expr_to_sys(spec_func(n,x),f(n::shift,x::diff));
    sys:=eval(subs(f=spec_func,sys));
    res:=collect(sys,indets(sys,function),factor);
    res:={seq(subs(n=10+1/i,res),i=[1,2,3,5,7])};
    res:=eval(subs(`&where`=proc(a,b) subs(b,a) end,
	convert(res,'diff')));
    res:=normal(convert(expand(res),'exp'));
    if res={{0}} then
	print(okay);
	next
    fi;
    print(res,spec_func(n,x),sys)
od:
