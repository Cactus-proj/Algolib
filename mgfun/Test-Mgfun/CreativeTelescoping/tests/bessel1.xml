<tests>

  <!-- xZeilb_7.test -->
  <test name="bessel_gener">
    <fun>BesselJ(n,x)*y^n</fun>
    <tex>\sum_{n} J_n(x)y^n</tex>
    <var_int name="n"/>
    <var name="n" type="shift"/>
    <var name="y" type="diff"/>
  </test>


  <!-- xZeilb_7.test -->
  <test name="bessel2">
    <fun>BesselJ(2*n+1/2,x)</fun>
    <tex>\sum_{n}J_{2n+1/2}(x)^2</tex>
    <var_int name="n"/>
    <var name="n" type="shift"/>
    <var name="x" type="diff"/>
  </test>


  <!-- xZeilb_7.test -->
  <test name="bessel_neumann">
    <fun>BesselJ(n,z)^2</fun>
    <tex>\sum_{n}J_n(z)^2</tex>
    <var_int name="n"/>
    <var name="n" type="shift"/>
    <var name="z" type="diff"/>
  </test>

</tests>
