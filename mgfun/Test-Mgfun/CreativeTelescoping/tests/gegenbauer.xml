<tests>

  <test name="gegen1">
    <fun>(x*(2*a-x))^(nu-1/2)*GegenbauerC(n,nu,x/a-1)*exp(-b*x)</fun>
    <tex>\int (x(2a-x))^{\nu-1/2} C_n^{(\nu)}\left(\frac{x}{a}-1\right)e^{-bx}\text{d}x</tex>
    <var_int name="x" />
    <var name="x" type="diff"/>
    <var name="a" type="diff" />
    <set_val name="n" type="int" inter="1..10"/>
    <set_val name="x" type="float" inter="0..2"/>
    <set_val name="a" type="float" inter="0..2"/>
    <set_val name="b" type="float" inter="0..2"/>
    <set_val name="nu" type="int" inter="1..5"/>
  </test>

