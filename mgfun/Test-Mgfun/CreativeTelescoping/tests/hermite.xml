<tests>
  
  <!-- Mehler formula for Hermite polynomials -->
  <test name="hermite_mehler">
    <fun>HermiteH(n,x)*HermiteH(n,y)*u^n/n!</fun>
    <tex>\sum_n H_n(x)H_n(y)\frac{u^n}{n!}</tex>
    <var_int name="n" />
    <var name="u" type="diff" />
    <var name="n" type="shift" />
    <set_val name="n" type="int" inter="1..30"/>
    <set_val name="x" type="float" inter="0..50"/>
    <set_val name="y" type="float" inter="0..50"/>
    <set_val name="u" type="float" inter="0..50"/>
  </test>


  <!-- Doetsch formula for Hermite polynomials -->
  <test name="hermite_doetsh">
    <fun>(1+2*x*y+4*y^2)*exp((4*x^2*y^2)/(1+4*y^2))/y^(n+1)/(1+4*y^2)^(3/2)</fun>
    <tex>\int\frac{(1+2xy+4y^2)\exp\left(\frac{4x^2y^2}{1+4y^2}\right)}{y^{n+1}(1+4y^2)^{\frac{3}{2}}} \text{d}x</tex>
    <var_int name="y"/>
    <var name="x" type="diff"/>
    <var name="y" type="diff"/>
  </test>

</tests>
