<tests>

  <!-- xZeilb_1.test -->

  <test name="binom1">
    <fun>binomial(n,k)</fun>
    <var_int name="k"/>
    <var name="n" type="shift"/>
    <var name="k" type="shift"/>
    <set_val name="n" type="int" inter="20..100"/>
    <set_val name="k" type="int" inter="2..19"/>
  </test>

  <test name="binom2">
    <fun>binomial(n,k)^2</fun>
    <tex>\sum_k{n\choose k}^2</tex>
    <var_int name="k"/>
    <var name="n" type="shift"/>
    <var name="k" type="shift"/>
    <set_val name="n" type="int" inter="20..100"/>
    <set_val name="k" type="int" inter="2..19"/>
  </test>

  <test name="binom3">
    <fun>binomial(n,k)^3</fun>
    <tex>\sum_k{n\choose k}^3</tex>
    <var_int name="k"/>
    <var name="n" type="shift"/>
    <var name="k" type="shift"/>
    <set_val name="n" type="int" inter="20..100"/>
    <set_val name="k" type="int" inter="2..19"/>
  </test>

  <test  name="binom4">
    <fun>binomial(n,k)^4</fun>
    <tex>\sum_k{n\choose k}^4</tex>
    <var_int name="k"/>
    <var name="n" type="shift"/>
    <var name="k" type="shift"/>
    <set_val name="n" type="int" inter="20..100"/>
    <set_val name="k" type="int" inter="2..19"/>
  </test>

  <test name="binom5">
    <fun>binomial(n,k)^5</fun>
    <tex>\sum_k{n\choose k}^5</tex>
    <var_int name="k"/>
    <var name="n" type="shift"/>
    <var name="k" type="shift"/>
    <set_val name="n" type="int" inter="20..100"/>
    <set_val name="k" type="int" inter="2..19"/>
  </test>

</tests>
