<tests>
  <!-- Carlitz identity -->
  <test name="carlitz_identity">
    <fun>binomial(i+j,i)*binomial(n-i,j)*binomial(n-j,n-i-j)</fun>
    <var_int name="i,j"/>
    <var name="n" type="shift"/>
    <var name="i" type="shift"/>
    <var name="j" type="shift"/>
    <set_val name="n" type="int" inter="40..80"/>
    <set_val name="i" type="int" inter="10..20"/>
    <set_val name="j" type="int" inter="10..20"/>
  </test>
</tests>
