<tests>
  <test name="jacobi_gener">
    <fun>JacobiP(n,a,b,x)*y^n</fun>
    <tex>\sum_n P^{(a,b)}_n(x)y^n</tex>
    <var_int name="n"/>
    <var name="n" type="shift"/>
    <var name="y" type="diff"/>
    <set_val name="n" type="int" inter="1..10"/>
    <set_val name="x" type="float"/>
    <set_val name="y" type="float"/>
    <set_val name="a" type="float"/>
    <set_val name="b" type="float"/>
  </test>
</tests>
