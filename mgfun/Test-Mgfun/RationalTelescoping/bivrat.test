with(Mgfun) :
f := 1/(y^2-x+y) :
CT := creative_telescoping(f, x::diff, y::diff)[1] :
if CT[1] = 2*_F(x)+(4*x+1)*diff(_F(x),x) then okay else "CT.1", CT end if ;
RCT := rational_creative_telescoping(f, x::diff, y::diff) :
if RCT[1] = CT[1] then okay else "RCT.1", RCT end if ;
if diff( normal(eval(CT[2], _f(x,y)=f) - RCT[2]), y ) = 0
then okay else "RCT.2", RCT end if ;
RCTu := rational_creative_telescoping(f, x::diff, y::diff, normalized=false) :
if RCTu[1] = CT[1] then okay else "RCTu.1", RCTu end if ;
if diff( normal(eval(CT[2], _f(x,y)=f) - RCTu[2]), y ) = 0
then okay else "RCTu.2", RCTu end if ;
